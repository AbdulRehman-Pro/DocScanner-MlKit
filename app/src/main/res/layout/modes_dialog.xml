<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/dialog_handle" />

    <RadioGroup
        android:id="@+id/limitRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_20sdp"
        android:checkedButton="@id/singleModeRadio"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_15sdp">


        <RadioButton
            android:id="@+id/singleModeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:theme="@style/RadioButtonStyle" />


        <RadioButton
            android:id="@+id/burstModeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:theme="@style/RadioButtonStyle" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/modeRadioGroup"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:checkedButton="@id/advanceModeRadio"
        android:orientation="vertical"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_15sdp">


        <RadioButton
            android:id="@+id/basicModeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:theme="@style/RadioButtonStyle" />


        <RadioButton
            android:id="@+id/basicModeFilterRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:theme="@style/RadioButtonStyle" />

        <RadioButton
            android:id="@+id/advanceModeRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/_10sdp"
            android:textColor="@color/white"
            android:theme="@style/RadioButtonStyle" />


    </RadioGroup>


</LinearLayout>